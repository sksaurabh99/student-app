pipeline {
    agent any

    environment {
        SERVER_IP    = '18.142.54.107'
        SSH_CRED_ID  = 'meven-node-java'
        TOMCAT_PATH  = '/var/lib/tomcat10/webapps'
        TOMCAT_SVC   = 'tomcat10'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/sksaurabh99/student-app.git'
            }
        }

        stage('Build WAR') {
            steps {
                sh '''
                    echo "Installing Maven..."
                    sudo apt update -y
                    sudo apt install -y maven
                    mvn -version
                    mvn clean package -DskipTests
                '''
            }
        }

        stage('Deploy to Tomcat') {
            steps {
                sshagent([SSH_CRED_ID]) {
                    sh """
                        echo "Deploying to remote Tomcat server..."
                        WAR_FILE=\$(ls target/*.war | head -n 1)
                        scp -o StrictHostKeyChecking=no \$WAR_FILE ubuntu@${SERVER_IP}:/tmp/
                        ssh -o StrictHostKeyChecking=no ubuntu@${SERVER_IP} '
                            sudo rm -rf ${TOMCAT_PATH}/ROOT*
                            sudo mv /tmp/*.war ${TOMCAT_PATH}/ROOT.war
                            sudo chown tomcat:tomcat ${TOMCAT_PATH}/ROOT.war
                            sudo systemctl restart ${TOMCAT_SVC}
                        '
                    """
                }
            }
        }
    }

    post {
        success {
            echo "✅ App deployed successfully! Visit: http://${SERVER_IP}:8080/"
        }
        failure {
            echo "❌ Deployment failed."
        }
    }
}
